@model Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign Up";
}

<style>
    .footer1{
        margin-bottom:0px;
        height:62px;
        width:98.7%;
        margin-left:0.5%;
    }
    .sand{
        height:500px;
    }
</style>
<div class="container" style="height:520px;">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel panel-default text-left">
                    <div class="panel-body">
                        <h2>@ViewBag.Title </h2>
                    </div>
                </div>

                <div class="panel-body well" style="height:410px">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-8  col-md-offset-2">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control input-lg", @placeholder = "Full Name", @tabindex = "3" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8  col-md-offset-2">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email Address", @tabindex = "4" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-4 col-md-offset-2">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password", @tabindex = "5" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "Confirm Password", @tabindex = "6" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8  col-md-offset-2">
                                @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, new { @class = "form-control input-lg" })
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                </div>
                            </div>
                        </div>

                        @*<div class="row">
                                <div class="col-md-2">
                                    <span class="button-checkbox">
                                        <button type="button" class="btn" data-color="info" tabindex="7">I Agree</button>
                                        <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
                                    </span>
                                </div>
                                <div class="col-md-10">
                                    By clicking <strong class="label label-primary">Create My Account</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.
                                </div>
                            </div>*@
                        <br />
                        <div class="row">
                            <div class="col-md-5  col-md-offset-1 " style="margin-top:70px;"><input type="submit" value="Create My Account" class="btn btn-primary btn-block btn-lg" style="background-color:#94618E" tabindex="7"></div>
                            <div class="col-md-5"  style="margin-top:70px;">@Html.ActionLink("Sign Me In", "Login", "Account", new { @class = "btn btn-success btn-block btn-lg bg-dark" })</div>

                    </div>
                </div>
              }
            </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Register")


}



@model Web.Models.EventEditViewModel
@{
    ViewBag.Title = "Edit Internship";
}
<br />
<head>
    <style>
        .past {
            background-color: darkgrey;
            color: antiquewhite;
        }

        p.event:hover {
            text-decoration: underline;
        }

        a.current {
            text-decoration-color: black;
        }
            .footer1{
        margin-bottom:0px;
        height:62px;
        width:98.7%;
        margin-left:0.5%;
    }
    .bg-sand{
        height:517px;
    }
    </style>
</head>


<body>
    <div class="container">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm("Edit", "Event", FormMethod.Post))
            {
                <div class="panel panel-default text-left">
                    <div class="panel-body">
                        <h2>@ViewBag.Title </h2>
                    </div>
                </div>
                <div class="panel-body well">
                    <p>@Html.HiddenFor(x => x.Id, Model.Id)</p>

                    <div class="form-group">
                        <div class="col-md-8  col-md-offset-2" style="width: 100%;">
                            <div class="row well-sm" style="width: 80%;">
                                @Html.TextBoxFor(x => x.Name)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8  col-md-offset-2" style="width: 100%;">
                            <div class="row well-sm" style="width: 80%;">
                                @Html.TextBoxFor(x => x.DateTimeUtc)
                                <a style="color: red;">@Html.ValidationMessageFor(x => x.DateTimeUtc)</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8  col-md-offset-2" style="width: 100%;">
                            <div class="row well-sm" style="width: 80%;">
                                @Html.DropDownListFor(x => x.LocationId, Model.LocationList)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8  col-md-offset-2" style="width: 100%;">
                            <div class="row well-sm" style="width: 80%;">
                                @Html.TextAreaFor(x => x.Description, new { @style = "width: 100%; height: 100px; resize: both;" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-8  col-md-offset-2" style="width: 100%;">
                        <input class="btn btn-primary" type="submit" value="Submit" />
                    </div>
                </div>
            }
        </div>
    </div>
</body>

